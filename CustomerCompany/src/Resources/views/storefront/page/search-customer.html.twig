{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
	{% block page_customer_search %}
		<div class="container">
	        <div class="row justify-content-center">
	            <div class="col-md-12">
	            	{% block customer_search_form_title %}
		                <h1 class="text-center mb-4">
		                    {{ 'customerCompany.search.title' | trans }}
		                </h1>
		            {% endblock %}
		            {% block customer_search_form_ %}
		                <form action="{{ path('frontend.search.customer') }}" method="get" class="mb-4">
		                    <div class="input-group">
		                        <input
		                            type="text"
		                            name="search"
		                            class="form-control"
		                            placeholder="{{ "customerCompany.search.placeholder"|trans }}"
		                            value="{{ searchQuery }}"
		                        >
		                        <div class="input-group-append">
		                            <button type="submit" class="btn btn-primary">
		                                {{ "customerCompany.search.button"|trans }}
		                            </button>
		                        </div>
		                    </div>
		                </form>
		            {% endblock %}
	            </div>

	            {% block customer_search_result %}
		            <div class="col-md-12">
		            	<table id="customerTable" class="table table-striped table-bordered mt-4">
	            	        <thead class="thead-dark">
	            	            <tr>
	            	                <th>{{ "customerCompany.table.name"|trans }}</th>
	            	                <th>{{ "customerCompany.table.email"|trans }}</th>
	            	            </tr>
	            	        </thead>
	            	        <tbody>
	            	            {% if page.responseData is not empty %}
    	                            {% for customer in page.responseData %}
    	                                <tr>
    	                                    <td>{{ customer.name }}</td>
    	                                    <td>{{ customer.email }}</td>
    	                                </tr>
    	                            {% endfor %}
    	                        {% else %}
    	                            <tr>
    	                                <td colspan="2" class="text-center">{{'customerCompany.table.not_foud'|trans}}</td>
    	                            </tr>
    	                        {% endif %}
	            	        </tbody>
	            	    </table>
	            	</div>
		        {% endblock %}
	        </div>
	    </div>
	{% endblock %}
{% endblock %}